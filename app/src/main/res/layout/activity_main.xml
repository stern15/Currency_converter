<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:padding="5dp"
    android:background="@drawable/currencies"
    android:backgroundTint="#6fffffff"
    android:backgroundTintMode="src_over"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="250dp"
        cardview:cardElevation="25dp"
        cardview:cardCornerRadius="15dp"
        android:layout_marginTop="135dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amount"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.82"
            android:textSize="18sp"
            android:text="Enter your amount in Dollars"
            android:paddingTop="40dp" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/dollarField"
            android:layout_gravity="center_horizontal"
            android:paddingTop="100dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert"
            android:id="@+id/convertButton"
            android:layout_gravity="center_horizontal"
            android:background="#5757f1"
            android:layout_marginTop="180dp"
            android:onClick="convert" />


    </android.support.v7.widget.CardView>



</LinearLayout>